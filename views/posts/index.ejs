<% layout('layouts/boilerplate') %>
  <% for (let category of newCat) {%>

    <div class="col-sm-4 offset-sm-1 card cardIndex mb-4">
      <a href="/<%= category.author._id %>/<%= category._id %>" class="text-decoration-none">
        <div class="card-header cardIndexHeader">
          <%= category.author.username %>
        </div>
        <div class="card-body cardIndexBody">
          <h5 class="card-title">
            <%= category.postCategory %>
          </h5>

        </div>

      </a>
    </div>
    <% } %>